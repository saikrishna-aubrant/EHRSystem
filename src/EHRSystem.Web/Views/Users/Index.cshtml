@using EHRSystem.Core.Models
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "User Management";
}

<div class="card-modern p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h4 mb-0">User Management</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus me-2"></i>
            New User
        </a>
    </div>

    <table class="table table-modern">
        <thead>
            <tr>
                <th>User</th>
                <th>Email</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="symbol symbol-circle bg-light-primary me-3">
                                <i class="bi bi-person fs-4 text-primary"></i>
                            </div>
                            <div>
                                @user.FirstName @user.LastName
                            </div>
                        </div>
                    </td>
                    <td>@user.Email</td>
                    <td>
                        <span class="badge-status badge-active">Active</span>
                    </td>
                    <td>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@user.Id" 
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@user.Id" 
                               class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 