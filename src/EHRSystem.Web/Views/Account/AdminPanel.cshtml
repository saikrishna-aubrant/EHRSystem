@model List<EHRSystem.Core.ViewModels.UserRoleViewModel>

<h2>Admin Panel</h2>

<div class="card">
    <div class="card-header">
        <h3>User Management</h3>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <a asp-action="AdminRegister" class="btn btn-primary">Register New User</a>
        </div>
        
        <table class="table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Current Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.CurrentRole</td>
                        <td>
                            <form asp-action="ChangeRole" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@user.UserId" />
                                <select name="newRole" class="form-select form-select-sm d-inline-block w-auto">
                                    <option value="Doctor" selected="@(user.CurrentRole == "Doctor")">Doctor</option>
                                    <option value="Patient" selected="@(user.CurrentRole == "Patient")">Patient</option>
                                </select>
                                <button type="submit" class="btn btn-sm btn-primary">Update Role</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 